<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jostin.planificadorviaje.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createItineraryFragment"
            app:destination="@id/createItineraryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_itineraryDetailFragment"
            app:destination="@id/itineraryDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.jostin.planificadorviaje.ui.admin.AdminHomeFragment"
        android:label="fragment_admin_home"
        tools:layout="@layout/fragment_admin_home">
        <action
            android:id="@+id/action_adminHomeFragment_to_restaurantesFragment"
            app:destination="@id/restaurantesFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_adminHotelFragment"
            app:destination="@id/adminHotelesFragment" />
        <action
            android:id="@+id/action_adminHomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminHotelesFragment"
        android:name="com.jostin.planificadorviaje.ui.admin.AdminHotelFragment"
        android:label="fragment_admin_hotel"
        tools:layout="@layout/fragment_admin_hotel">

    </fragment>

    <fragment
        android:id="@+id/restaurantesFragment"
        android:name="com.jostin.planificadorviaje.ui.admin.RestaurantesFragment"
        android:label="fragment_restaurantes"
        tools:layout="@layout/fragment_restaurantes">

    </fragment>

    <fragment
        android:id="@+id/selectPlanTypeFragment"
        android:name="com.jostin.planificadorviaje.ui.plan.SelectPlanTypeFragment"
        android:label="Select Plan Type"
        tools:layout="@layout/fragment_select_plan_type">
        <argument
            android:name="itineraryId"
            app:argType="string" />
        <argument
            android:name="city"
            app:argType="com.jostin.planificadorviaje.model.City" />
        <action
            android:id="@+id/action_selectPlanTypeFragment_to_createPlanFragment"
            app:destination="@id/createPlanFragment" />
        <!-- Acción hacia RestaurantFormFragment -->
        <action
            android:id="@+id/actionSelectPlanTypeFragmentToRestaurantFormFragment"
            app:destination="@id/restaurantFormFragment" />
        <!-- Acción hacia HotelFormFragment -->
        <action
            android:id="@+id/actionSelectPlanTypeFragmentToHotelFormFragment"
            app:destination="@id/hotelFormFragment" />
    </fragment>

    <!-- RestaurantFormFragment -->
    <fragment
        android:id="@+id/restaurantFormFragment"
        android:name="com.jostin.planificadorviaje.ui.plan.restaurant.RestaurantFormFragment"
        android:label="Restaurant Form"
        tools:layout="@layout/fragment_restaurant_form">
        <!-- Opcional: Puedes definir acciones desde este fragmento -->
        <argument
            android:name="itineraryId"
            app:argType="string" />
        <argument
            android:name="city"
            app:argType="com.jostin.planificadorviaje.model.City" />
        <action
            android:id="@+id/action_restaurantFormFragment_to_restaurantMapFragment"
            app:destination="@id/restaurantMapFragment" />
        <action
            android:id="@+id/action_restaurantFormFragment_to_itineraryDetailFragment"
            app:destination="@id/itineraryDetailFragment" />
    </fragment>

    <!-- RestaurantMapFragment -->
    <fragment
        android:id="@+id/restaurantMapFragment"
        android:name="com.jostin.planificadorviaje.ui.map.RestaurantMapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_restaurant_map">
        <argument
            android:name="city"
            app:argType="com.jostin.planificadorviaje.model.City" />

    </fragment>


    <!-- RestaurantFormFragment -->
    <fragment
        android:id="@+id/hotelFormFragment"
        android:name="com.jostin.planificadorviaje.ui.plan.hotel.HotelFormFragment"
        android:label="Hotel Form"
        tools:layout="@layout/fragment_hotel_form">
        <!-- Opcional: Puedes definir acciones desde este fragmento -->
        <argument
            android:name="itineraryId"
            app:argType="string" />
        <argument
            android:name="city"
            app:argType="com.jostin.planificadorviaje.model.City" />
        <action
            android:id="@+id/action_hotelFormFragment_to_hotelMapFragment"
            app:destination="@id/hotelMapFragment" />
        <action
            android:id="@+id/action_hotelFormFragment_to_itineraryDetailFragment"
            app:destination="@id/itineraryDetailFragment" />
    </fragment>

    <!-- RestaurantMapFragment -->
    <fragment
        android:id="@+id/hotelMapFragment"
        android:name="com.jostin.planificadorviaje.ui.map.HotelMapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_hotel_map">
        <argument
            android:name="city"
            app:argType="com.jostin.planificadorviaje.model.City" />
    </fragment>


    <fragment
        android:id="@+id/accountFragment"
        android:name="com.jostin.planificadorviaje.ui.account.AccountFragment"
        android:label="@string/account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_accountFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/createItineraryFragment"
        android:name="com.jostin.planificadorviaje.ui.itinerary.CreateItineraryFragment"
        android:label="@string/create_itinerary"
        tools:layout="@layout/fragment_create_itinerary">
        <action
            android:id="@+id/action_createItineraryFragment_to_selectPlanTypeFragment"
            app:destination="@id/selectPlanTypeFragment" />
        <action
            android:id="@+id/action_createItineraryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jostin.planificadorviaje.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <!--        <action-->
        <!--            android:id="@+id/action_loginFragment_to_registroUsuarioFragment"-->
        <!--            app:destination="@id/registroUsuarioFragment" />-->
        <!--        <action-->
        <!--            android:id="@+id/action_loginFragment_to_adminHomeFragment"-->
        <!--            app:destination="@id/adminHomeFragment"-->
        <!--            app:popUpTo="@id/loginFragment"-->
        <!--            app:popUpToInclusive="true"/>-->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.jostin.planificadorviaje.ui.login.RegisterFragment"
        android:label="fragment_registro_usuario"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/itineraryDetailFragment"
        android:name="com.jostin.planificadorviaje.ui.itinerary.ItineraryDetailFragment"
        android:label="@string/itinerary_detail"
        tools:layout="@layout/fragment_itinerary_detail">
        <argument
            android:name="itineraryId"
            app:argType="string" />
        <action
            android:id="@+id/action_itineraryDetailFragment_to_selectPlanTypeFragment"
            app:destination="@id/selectPlanTypeFragment" />
        <action
            android:id="@+id/action_itineraryDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/createPlanFragment"
        android:name="com.jostin.planificadorviaje.ui.plan.CreatePlanFragment"
        android:label="@string/create_plan"
        tools:layout="@layout/fragment_create_plan">
        <argument
            android:name="planType"
            app:argType="string" />
        <argument
            android:name="itineraryId"
            app:argType="string" />
        <action
            android:id="@+id/action_createPlanFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


    <fragment
        android:id="@+id/mapFragment"
        android:name="com.jostin.planificadorviaje.ui.map.MapFragment"
        android:label="Mapa"
        tools:layout="@layout/fragment_map">

    </fragment>

</navigation>
