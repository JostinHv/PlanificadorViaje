<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/black"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/upcomingTripImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/scrim_gradient"
            app:layout_constraintTop_toTopOf="@id/upcomingTripImage"
            app:layout_constraintBottom_toBottomOf="@id/upcomingTripImage"
            app:layout_constraintStart_toStartOf="@id/upcomingTripImage"
            app:layout_constraintEnd_toEndOf="@id/upcomingTripImage" />

        <TextView
            android:id="@+id/upcomingTripLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upcoming_trip"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/upcomingTripName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="@id/upcomingTripImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upcomingTripLabel"
            tools:text="Amazing Paris Adventure" />

        <TextView
            android:id="@+id/upcomingTripDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/upcomingTripImage"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Jun 15 - Jun 22, 2023" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewTripButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_trip"
            android:textColor="@color/white"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/upcomingTripDates"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

